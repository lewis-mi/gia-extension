
{
  "manifest_version": 3,
  "name": "Gia — Mindful 20-20-20",
  "version": "1.0.0",
  "description": "Every 20 minutes, take a 20-second break and look 20 feet away. Built with Chrome's Built-in AI for mindful breaks.",
  "minimum_chrome_version": "138.0.0.0",

  "permissions": [
    "alarms",
    "storage",
    "tts",
    "contextMenus"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Gia — Mindful Breaks",
    "default_popup": "ui/popup.html",
    "default_icon": {
      "16": "assets/icons/icon_0_start.png",
      "32": "assets/icons/icon_0_start_32.png",
      "48": "assets/icons/icon_0_start_48.png",
      "128": "assets/icons/icon_0_start_128.png"
    }
  },

  "icons": {
    "16": "assets/icons/icon_0_start.png",
    "32": "assets/icons/icon_0_start_32.png",
    "48": "assets/icons/icon_0_start_48.png",
    "128": "assets/icons/icon_0_start_128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/corner-logo.css", "styles/card.css"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "ui/*.html",
        "styles/*.css",
        "assets/icons/*",
        "assets/logo.png"
      ],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": ["<all_urls>"],

