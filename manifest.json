{
  "manifest_version": 3,
  "name": "Gia â€” Mindful 20-20-20",
  "version": "0.6.0",
  "minimum_chrome_version": "138",
  "description": "Voice-guided 20-20-20 with optional long resets and on-device AI tips.",
  "icons": { "128": "assets/logo.png", "48": "assets/logo.png", "32": "assets/logo.png", "16": "assets/logo.png" },

  "action": { "default_title": "Gia", "default_popup": "ui/popup.html" },

  "background": { "service_worker": "background.js", "type": "module" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/card.css", "styles/corner-logo.css"],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "alarms", "notifications", "storage", "tts", "offscreen", "tabs"
  ],
  "optional_permissions": [],
  "host_permissions": ["<all_urls>"],

  "commands": {
    "toggle-pause": {
      "suggested_key": { "default": "Ctrl+Shift+G", "mac": "Command+Shift+G" },
      "description": "Pause/Resume Gia"
    }
  },

  "trial_tokens": [
    "PASTE_PROOFREADER_TOKEN_IF_USED",
    "PASTE_REWRITER_TOKEN_IF_USED"
  ]
}
